tags: question
title: Cloze

<$reveal
	state=<<folded-state>>
	type="nomatch"
	text="show"
	animate="yes"
>
	<$reveal
		default={{$:/temp/fishing!!fish}}
		type="nomatch"
		text=<<currentTiddler>>
		animate="yes"
	>
		{{!!title}}
	</$reveal>
	<$reveal
		default={{$:/temp/fishing!!fish}}
		type="match"
		text=<<currentTiddler>>
		animate="yes"
	>
		<$reveal
			default={{{[{!!title}split[__]count[]]}}}
			type="gteq"
			text="3"
			animate="yes"
		>
			<$list
				filter="[{!!title}split[__]]"
				variable="titleitem"
				counter="counter"
			>
				<$reveal
					default={{{[<counter>remainder[2]]}}}
					type="nomatch"
					text="0"
				>
					<<titleitem>>
				</$reveal>
				<$reveal
					default={{{[<counter>remainder[2]]}}}
					type="match"
					text="0"
				>
					<$let
						clozeid=<<counter>>
						clozecontent=<<titleitem>>
						clozecontent={{{[[$:/temp/fishing]getindex<clozeid>match[show]then<titleitem>else[`    `]]}}}
					>
						<$button
							class="tc-btn-invisible tc-tiddlylink"
						>
							<$action-setfield
								$tiddler="$:/temp/fishing"
								$index=<<clozeid>>
								$value={{{[[$:/temp/fishing]getindex<clozeid>match[show]then[]else[show]]}}}
							/>
								<<clozecontent>>
						</$button>
					</$let>
				</$reveal>
			</$list>
		</$reveal>
		<$reveal
			default={{{[{!!title}split[__]count[]]}}}
			type="lt"
			text="3"
			animate="yes"
		>
			{{!!title}}
		</$reveal>
	</$reveal>
</$reveal>
<$reveal
	state=<<folded-state>>
	type="match"
	text="show"
	animate="yes"
>
	{{!!title}}
</$reveal>