.fishingrod-button {
    margin:0!important;
    padding:0 5px!important;
    width:auto!important;
}

.dropdown-more {
    padding:3px 10px!important;
}

.tc-fishing-learning {
    display:flex;
    justify-content:space-between;
    align-items:center;
}

.tc-fishing-learning-count{
    color:grey;
}

.tc-fishing-learning-grade .learn{
    color:green;
    margin-left:10px;
    user-select: none;
}

.tc-fishing-learning-grade .forget{
    color:red;
    margin-left:10px;
    user-select: none;
}

.tc-fishing-learning-grade .remember{
    color:green;
    margin-left:10px;
    user-select: none;
}

.tc-fishing-learning-grade .grasp{
    color:blue;
    margin-left:10px;
    user-select: none;
}

.tc-fishing-learning-grade .more{
    padding-left:10px;
    user-select: none;
}

.learn:hover,
.forget:hover,
.remember:hover,
.grasp:hover,
.more:hover {
    text-decoration: underline;
}

blockquote.tc-fish-quote {
    border-left: 1px solid <<colour message-border>>;
    margin-right: 0;
    margin-left: 5px;
}

